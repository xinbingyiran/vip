<Window x:Class="AliHelper.QrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AliHelper"
        mc:Ignorable="d"
        Title="QrWindow" Width="440" Height="480" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding Status}" FontSize="12"></TextBlock>
        </StatusBar>
        <Image Source="{Binding QrSource}" Width="400" Height="400">
        </Image>
    </DockPanel>
</Window>
